{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "outDir": "./dist",
  "moduleResolution": "node",
    "rootDir": "",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"  // Fixed path (removed leading slash)
    ],
    "types": ["express"],
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "*": ["src/types/*"],
      "@/*": ["src/*"],

    }
    
  }
  
}