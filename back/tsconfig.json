{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "outDir": "./dist",
    "moduleResolution": "node",
    "rootDir": "./src",  // Adicione o caminho expl√≠cito
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    "types": ["node","express", "amqplib"],  // Adicione amqplib
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "@/": ["src/"]  // Simplifique os paths
    }
  },
  "include": ["src/*/"],
  "exclude": ["node_modules"]
}